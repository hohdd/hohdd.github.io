---
layout: compress
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>{{ site.title }}</title>
 <link href="{{ site.url }}/atom.xml" rel="self"/>
 <id>{{ site.url }}</id>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <author>
   <name>{{ site.author.name }}</name>
   <uri>{{ site.author.url }}</uri>
   <email>{{ site.author.email }}</email>
 </author>

{% for post in site.posts limit: 10 %}
{% if post.draft != true %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="{{ site.url }}{{ post.url }}"/>
   <id>{{ site.url }}{{ post.id }}</id>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <content type="html">{{ post.excerpt | xml_escape | truncatewords:50 }}</content>
 </entry>
{% endif %}
{% endfor %}


{% assign serials = site.collections | where: 'isSerial', true | where: 'show', true %}
{% if serials.size > 0 %}
  {% for serial in serials %}

    {% assign docs = serial.docs | where: 'draft', false %}
    {% if docs.size > 0 %}

      {% for doc in docs %}
      <entry>
        <title>{{ doc.title }}</title>
        <link href="{{ site.url }}{{ doc.url }}"/>
        <id>{{ site.url }}{{ doc.url }}</id>
        <updated>{{ doc.date | date_to_xmlschema }}</updated>
        <content type="html">{{ doc.excerpt | xml_escape | truncatewords:50 }}</content>
      </entry>
      {% endfor %}

    {% endif %}

  {% endfor %}
{% endif %}

</feed>