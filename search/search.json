---
layout: compress
---
[
  {% comment %} ------------------------------ BEGIN POST ------------------------------ {% endcomment %}
  {% assign posts = site.posts | where: 'draft', false  | where: 'exclude', false %}
  {% if posts.size > 0 %}
    {% for post in posts %}
      {
        "title"    : "[P] {{ post.title | escape }}",
        "url"      : "{{ site.baseurl }}{{ post.url }}",
        "date"     : "{{ post.date | date: '%F' }}"
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  {% else %}
      {}
  {% endif %}
  {% comment %} ------------------------------ END POST ------------------------------ {% endcomment %}

  {% comment %} ------------------------------ BEGIN COLLECTIONS ------------------------------ {% endcomment %}
  {% assign serials = site.collections | where: 'isSerial', true | where: 'show', true %}
  {% if serials.size > 0 %}
    {% for serial in serials %}

      {% assign docs = serial.docs | where: 'draft', false %}
      {% if docs.size > 0 %}

        {% for doc in docs %},
          {
            "title"    : "[C] {{ doc.title | escape }}",
            "url"      : "{{ site.baseurl }}{{ doc.url }}",
            "date"     : "{{ doc.date | date: '%F' }}"
          }
        {% endfor %}

      {% endif %}

    {% endfor %}
  {% endif %}
  {% comment %} ------------------------------ END COLLECTIONS ------------------------------ {% endcomment %}
]
